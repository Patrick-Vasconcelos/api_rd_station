pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'docker-compose build'
      }
    }
    stage('Deploy') {
      steps {
        sh 'docker-compose up -d'
      }
    }
    stage('Post-processing') {
            steps {
                sh 'docker-compose exec python_app python main.py'
            }
        }
  }
}